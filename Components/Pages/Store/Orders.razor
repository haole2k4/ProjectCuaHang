@page "/store/orders"
@layout StoreLayout
@rendermode InteractiveServer
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

@using Microsoft.EntityFrameworkCore
@using StoreManagementAPI.Data
@using StoreManagementAPI.Models
@using BlazorApp1.Services
@using Blazorise
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims

@inject StoreDbContext DbContext
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>My Orders</PageTitle>

<div class="flex flex-wrap justify-between items-center mb-6 gap-4">
    <Heading Size="HeadingSize.Is2" class="text-3xl font-bold">
        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.ShoppingBag" class="mr-2 text-2xl" /> My Orders
    </Heading>
    <Button Color="Color.Primary" To="/store" Type="ButtonType.Link" class="!bg-blue-600 !text-white hover:!bg-blue-700 hover:!text-white">
        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Store" class="mr-2" /> Continue Shopping
    </Button>
</div>

@if (isLoading)
{
    <div class="loading-spinner">
        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
    </div>
}
else if (orders == null || !orders.Any())
{
    <div class="empty-state bg-white rounded-lg shadow-lg p-12">
        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.ShoppingBag" class="text-8xl text-gray-400 mb-4" />
        <Heading Size="HeadingSize.Is3" class="mb-2 text-2xl">No orders yet</Heading>
        <Paragraph TextColor="TextColor.Muted" class="mb-6 text-lg">You haven't placed any orders yet.</Paragraph>
        <Button Color="Color.Primary" To="/store" Type="ButtonType.Link" class="!bg-blue-600 !text-white hover:!bg-blue-700 hover:!text-white">
            <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Store" class="mr-2" /> Start Shopping
        </Button>
    </div>
}
else
{
    <div class="space-y-6">
        @foreach (var order in orders)
        {
            <Card class="card-shadow hover:card-shadow-lg transition-shadow">
                <CardHeader Background="Background.Light">
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 items-center">
                        <div>
                            <small class="text-gray-500 text-xs font-semibold uppercase">Order #</small>
                            <Heading Size="HeadingSize.Is6" class="mb-0 text-lg font-bold">@order.OrderId</Heading>
                        </div>
                        <div>
                            <small class="text-gray-500 text-xs font-semibold uppercase">Date</small>
                            <Heading Size="HeadingSize.Is6" class="mb-0 text-lg font-bold">@order.OrderDate.ToString("MMM dd, yyyy")</Heading>
                        </div>
                        <div>
                            <small class="text-gray-500 text-xs font-semibold uppercase">Total</small>
                            <Heading Size="HeadingSize.Is6" TextColor="TextColor.Success" class="mb-0 text-lg font-bold">$@order.TotalAmount.ToString("N2")</Heading>
                        </div>
                        <div class="text-right">
                            <span class="@GetStatusBadgeClass(order.Status) px-3 py-1.5 rounded-full text-sm font-semibold text-white inline-block">
                                @order.Status.ToUpper()
                            </span>
                        </div>
                    </div>
                </CardHeader>
                <CardBody>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        @foreach (var item in order.OrderItems.Take(3))
                        {
                            <div class="flex items-center gap-4">
                                @if (!string.IsNullOrEmpty(item.Product?.ImageUrl))
                                {
                                    <img src="@item.Product.ImageUrl" class="w-20 h-20 rounded-lg object-cover shadow" alt="@item.Product?.ProductName" />
                                }
                                else
                                {
                                    <div class="w-20 h-20 rounded-lg bg-gray-200 flex items-center justify-center">
                                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.BoxOpen" TextColor="TextColor.Muted" class="text-2xl" />
                                    </div>
                                }
                                <div>
                                    <small class="block font-semibold text-sm">@item.Product?.ProductName</small>
                                    <small class="text-gray-500 text-xs">Quantity: @item.Quantity Ã— $@item.Price.ToString("N2")</small>
                                </div>
                            </div>
                        }
                        @if (order.OrderItems.Count > 3)
                        {
                            <div class="flex items-center">
                                <small class="text-gray-500 text-sm font-medium">+@(order.OrderItems.Count - 3) more items</small>
                            </div>
                        }
                    </div>
                </CardBody>
                <CardFooter class="flex flex-wrap justify-between items-center gap-4">
                    <div>
                        @if (order.Payments.Any())
                        {
                            <small class="text-gray-500 text-sm">
                                <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Wallet" class="mr-1" /> Paid via @order.Payments.First().PaymentMethod
                            </small>
                        }
                    </div>
                    <Buttons>
                        <Button Color="Color.Primary" Size="Size.Small" To="@($"/store/orders/{order.OrderId}")" Type="ButtonType.Link" class="font-medium !bg-blue-600 !text-white hover:!bg-blue-700 hover:!text-white">
                            <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Eye" class="mr-1" /> View Details
                        </Button>
                        <Button Color="Color.Primary" Size="Size.Small" To="@($"/store/orders/{order.OrderId}/bill")" Type="ButtonType.Link" class="font-medium !bg-blue-600 !text-white hover:!bg-blue-700 hover:!text-white">
                            <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Receipt" class="mr-1" /> View Bill
                        </Button>
                    </Buttons>
                </CardFooter>
            </Card>
        }
    </div>
}

@code {
    private List<Order>? orders;
    private bool isLoading = true;
    private int? customerId;

    protected override async Task OnInitializedAsync()
    {
        // Get current user's customer ID
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var userId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            if (userId != null)
            {
                var customer = await DbContext.Customers
                    .FirstOrDefaultAsync(c => c.ApplicationUserId == userId);
                if (customer != null)
                {
                    customerId = customer.CustomerId;
                }
            }
        }

        await LoadOrders();
    }

    private async Task LoadOrders()
    {
        isLoading = true;

        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var isAdmin = user.IsInRole("ADMIN");

        if (isAdmin)
        {
            // ADMIN: Load all orders
            orders = await DbContext.Orders
                .Include(o => o.Customer)
                .Include(o => o.OrderItems)
                .ThenInclude(oi => oi.Product)
                .Include(o => o.Payments)
                .OrderByDescending(o => o.OrderDate)
                .ToListAsync();
        }
        else if (customerId.HasValue)
        {
            // CUSTOMER: Load only their orders
            orders = await DbContext.Orders
                .Include(o => o.OrderItems)
                .ThenInclude(oi => oi.Product)
                .Include(o => o.Payments)
                .Where(o => o.CustomerId == customerId.Value)
                .OrderByDescending(o => o.OrderDate)
                .ToListAsync();
        }
        else
        {
            // No customer record - show empty
            orders = new List<Order>();
        }

        isLoading = false;
    }

    private string GetStatusBadgeClass(string status) => status.ToLower() switch
    {
        "pending" => "bg-red-600",
        "completed" => "bg-green-600",
        "cancelled" or "canceled" => "bg-gray-600",
        "processing" => "bg-blue-600",
        "shipped" => "bg-cyan-600",
        _ => "bg-gray-500"
    };
}
