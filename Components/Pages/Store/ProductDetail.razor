@page "/products/{productName}"
@layout StoreLayout
@rendermode InteractiveServer

@using Microsoft.EntityFrameworkCore
@using StoreManagementAPI.Data
@using StoreManagementAPI.Models
@using BlazorApp1.Services

@inject StoreDbContext DbContext
@inject ICartService CartService
@inject NavigationManager NavigationManager

<PageTitle>@(product?.ProductName ?? "Product Detail") - E-Store</PageTitle>

@if (isLoading)
{
    <div class="flex items-center justify-center min-h-screen">
        <div class="animate-spin rounded-full h-16 w-16 border-4 border-blue-600 border-t-transparent"></div>
    </div>
}
else if (product == null)
{
    <div class="max-w-4xl mx-auto py-12 px-4">
        <div class="bg-white rounded-xl shadow-lg p-12 text-center">
            <div class="w-24 h-24 mx-auto mb-6 bg-gray-100 rounded-full flex items-center justify-center">
                <i class="fas fa-exclamation-circle text-4xl text-gray-400"></i>
            </div>
            <h2 class="text-2xl font-bold text-gray-900 mb-2">Không tìm thấy sản phẩm</h2>
            <p class="text-gray-600 mb-6">Sản phẩm này không tồn tại hoặc đã bị xóa</p>
            <button @onclick='() => NavigationManager.NavigateTo("/store")'
                    class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition duration-200">
                <i class="fas fa-arrow-left mr-2"></i>
                Quay lại cửa hàng
            </button>
        </div>
    </div>
}
else
{
    <div class="max-w-7xl mx-auto py-8 px-4">
        <!-- Breadcrumb -->
        <nav class="mb-6">
            <ol class="flex items-center space-x-2 text-sm">
                <li>
                    <a href="/" class="text-blue-600 hover:text-blue-700">Trang chủ</a>
                </li>
                <li class="text-gray-400">/</li>
                <li>
                    <a href="/store" class="text-blue-600 hover:text-blue-700">Cửa hàng</a>
                </li>
                @if (product.Category != null)
                {
                    <li class="text-gray-400">/</li>
                    <li>
                        <a href="/store/category/@product.Category.CategoryId" class="text-blue-600 hover:text-blue-700">
                            @product.Category.CategoryName
                        </a>
                    </li>
                }
                <li class="text-gray-400">/</li>
                <li class="text-gray-900 font-medium">@product.ProductName</li>
            </ol>
        </nav>

        <!-- Product Detail -->
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 p-6 lg:p-10">
                <!-- Product Image -->
                <div class="space-y-4">
                    <div class="aspect-square bg-gray-100 rounded-xl overflow-hidden">
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl"
                                 alt="@product.ProductName"
                                 class="w-full h-full object-cover" />
                        }
                        else
                        {
                            <div class="w-full h-full flex items-center justify-center">
                                <i class="fas fa-box-open text-9xl text-gray-300"></i>
                            </div>
                        }
                    </div>
                </div>

                <!-- Product Info -->
                <div class="flex flex-col">
                    <div class="flex-1">
                        <div class="flex items-center justify-between mb-4">
                            <h1 class="text-4xl font-bold text-gray-900">@product.ProductName</h1>
                            @if (product.Category != null)
                            {
                                <span class="bg-red-600 px-4 py-2 rounded-full text-sm font-bold text-white shadow-lg uppercase tracking-wide">
                                    @product.Category.CategoryName
                                </span>
                            }
                        </div>

                        <!-- Price -->
                        <div class="mb-6 pb-6 border-b border-gray-200">
                            <div class="flex items-baseline gap-3">
                                <span class="text-5xl font-bold text-blue-600">$@product.Price.ToString("N2")</span>
                                @if (!string.IsNullOrEmpty(product.Unit))
                                {
                                    <span class="text-xl text-gray-500 font-medium">/ @product.Unit</span>
                                }
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="mb-6">
                            <h3 class="text-lg font-bold text-gray-900 mb-3">Mô tả sản phẩm</h3>
                            <p class="text-gray-700 leading-relaxed break-words whitespace-pre-wrap overflow-wrap-anywhere">
                                @(product.Description ?? "Chưa có mô tả cho sản phẩm này.")
                            </p>
                        </div>

                        <!-- Stock Status -->
                        <div class="mb-6">
                            <h3 class="text-lg font-bold text-gray-900 mb-3">Tình trạng</h3>
                            @if (product.Inventories.Any())
                            {
                                var totalStock = product.Inventories.Sum(i => i.Quantity);
                                @if (totalStock > 0)
                                {
                                    <div class="flex items-center gap-2">
                                        <span class="bg-green-100 text-green-800 px-4 py-2 rounded-lg font-semibold">
                                            <i class="fas fa-check-circle mr-2"></i>Còn hàng
                                        </span>
                                        <span class="text-gray-600">(@totalStock sản phẩm có sẵn)</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="flex items-center gap-2">
                                        <span class="bg-red-100 text-red-800 px-4 py-2 rounded-lg font-semibold">
                                            <i class="fas fa-times-circle mr-2"></i>Hết hàng
                                        </span>
                                    </div>
                                }
                            }
                            else
                            {
                                <span class="bg-gray-100 text-gray-800 px-4 py-2 rounded-lg font-semibold">
                                    Không có thông tin tồn kho
                                </span>
                            }
                        </div>

                        <!-- Quantity Selector -->
                        <div class="mb-8">
                            <h3 class="text-lg font-bold text-gray-900 mb-3">Số lượng</h3>
                            <div class="flex items-center gap-3">
                                <button @onclick="DecreaseQuantity"
                                        class="w-12 h-12 bg-gray-200 hover:bg-gray-300 rounded-lg font-bold text-xl transition">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <input type="number"
                                       @bind="quantity"
                                       min="1"
                                       class="w-20 h-12 text-center border-2 border-gray-300 rounded-lg font-bold text-xl focus:outline-none focus:border-blue-500" />
                                <button @onclick="IncreaseQuantity"
                                        class="w-12 h-12 bg-gray-200 hover:bg-gray-300 rounded-lg font-bold text-xl transition">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="space-y-3">
                        <div class="grid grid-cols-2 gap-3">
                            <button @onclick="AddToCart"
                                    disabled="@(!product.Inventories.Any() || product.Inventories.Sum(i => i.Quantity) <= 0)"
                                    class="bg-blue-600 hover:bg-blue-700 disabled:bg-gray-300 disabled:cursor-not-allowed text-white px-6 py-4 rounded-xl font-bold text-lg transition duration-200 flex items-center justify-center gap-2 shadow-lg hover:shadow-xl">
                                <i class="fas fa-cart-plus text-xl"></i>
                                <span>Thêm vào giỏ</span>
                            </button>

                            <button @onclick="BuyNow"
                                    disabled="@(!product.Inventories.Any() || product.Inventories.Sum(i => i.Quantity) <= 0)"
                                    class="bg-orange-600 hover:bg-orange-700 disabled:bg-gray-300 disabled:cursor-not-allowed text-white px-6 py-4 rounded-xl font-bold text-lg transition duration-200 flex items-center justify-center gap-2 shadow-lg hover:shadow-xl">
                                <i class="fas fa-shopping-bag text-xl"></i>
                                <span>Mua ngay</span>
                            </button>
                        </div>

                        <button @onclick='() => NavigationManager.NavigateTo("/store")'
                                class="w-full bg-gray-100 hover:bg-gray-200 text-gray-700 px-6 py-4 rounded-xl font-semibold text-lg transition duration-200 flex items-center justify-center gap-3">
                            <i class="fas fa-arrow-left"></i>
                            <span>Tiếp tục mua sắm</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Related Products (Optional) -->
        @if (relatedProducts != null && relatedProducts.Any())
        {
            <div class="mt-12">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">Sản phẩm liên quan</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                    @foreach (var related in relatedProducts)
                    {
                        <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition duration-300 overflow-hidden cursor-pointer"
                             @onclick='() => NavigateToProduct(related.ProductName)'>
                            <div class="aspect-square bg-gray-100">
                                @if (!string.IsNullOrEmpty(related.ImageUrl))
                                {
                                    <img src="@related.ImageUrl" alt="@related.ProductName" class="w-full h-full object-cover" />
                                }
                                else
                                {
                                    <div class="w-full h-full flex items-center justify-center">
                                        <i class="fas fa-box-open text-4xl text-gray-300"></i>
                                    </div>
                                }
                            </div>
                            <div class="p-4">
                                <h3 class="font-bold text-gray-900 mb-2 line-clamp-2">@related.ProductName</h3>
                                <p class="text-2xl font-bold text-blue-600">$@related.Price.ToString("N2")</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}

<!-- Toast Notification -->
@if (showToast)
{
    <div class="fixed bottom-6 right-6 z-50 animate-slide-up">
        <div class="bg-green-600 text-white px-6 py-4 rounded-xl shadow-2xl flex items-center gap-3 max-w-md">
            <div class="flex-shrink-0">
                <div class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center">
                    <i class="fas fa-check text-lg"></i>
                </div>
            </div>
            <div class="flex-1">
                <p class="font-semibold">@toastMessage</p>
            </div>
            <button @onclick="() => showToast = false"
                    class="flex-shrink-0 text-white/80 hover:text-white transition">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
}

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    @@keyframes slide-up {
        from {
            transform: translateY(100%);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .animate-slide-up {
        animation: slide-up 0.3s ease-out;
    }
</style>

@code {
    [Parameter]
    public string ProductName { get; set; } = string.Empty;

    private Product? product;
    private List<Product>? relatedProducts;
    private bool isLoading = true;
    private int quantity = 1;
    private bool showToast = false;
    private string toastMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadProduct();
        await LoadRelatedProducts();
    }

    protected override async Task OnParametersSetAsync()
    {
        await LoadProduct();
        await LoadRelatedProducts();
    }

    private async Task LoadProduct()
    {
        isLoading = true;

        try
        {
            var decodedName = Uri.UnescapeDataString(ProductName);

            product = await DbContext.Products
                .Include(p => p.Category)
                .Include(p => p.Inventories)
                .FirstOrDefaultAsync(p => p.ProductName == decodedName && p.Status == "active");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading product: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadRelatedProducts()
    {
        if (product == null) return;

        try
        {
            relatedProducts = await DbContext.Products
                .Include(p => p.Category)
                .Where(p => p.CategoryId == product.CategoryId &&
                           p.ProductId != product.ProductId &&
                           p.Status == "active")
                .Take(4)
                .ToListAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading related products: {ex.Message}");
        }
    }

    private void IncreaseQuantity()
    {
        quantity++;
    }

    private void DecreaseQuantity()
    {
        if (quantity > 1)
        {
            quantity--;
        }
    }

    private async Task AddToCart()
    {
        if (product == null) return;

        try
        {
            var (success, message) = await CartService.AddToCartAsync(product, quantity);

            if (success)
            {
                toastMessage = $"Đã thêm {quantity} {product.ProductName} vào giỏ hàng!";
                quantity = 1; // Reset quantity
            }
            else
            {
                toastMessage = message;
            }

            showToast = true;
            await Task.Delay(3000);
            showToast = false;
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error adding to cart: {ex.Message}");
        }
    }

    private async Task BuyNow()
    {
        if (product == null) return;

        try
        {
            var (success, message) = await CartService.AddToCartAsync(product, quantity);

            if (success)
            {
                // Navigate to checkout page
                NavigationManager.NavigateTo("/store/checkout");
            }
            else
            {
                toastMessage = message;
                showToast = true;
                await Task.Delay(3000);
                showToast = false;
                await InvokeAsync(StateHasChanged);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error during buy now: {ex.Message}");
        }
    }

    private void NavigateToProduct(string productName)
    {
        var encodedName = Uri.EscapeDataString(productName);
        NavigationManager.NavigateTo($"/products/{encodedName}", forceLoad: true);
    }
}
