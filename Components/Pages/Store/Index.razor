@page "/store"
@page "/store/category/{categoryId:int}"
@layout StoreLayout
@rendermode InteractiveServer

@using Microsoft.EntityFrameworkCore
@using StoreManagementAPI.Data
@using StoreManagementAPI.Models
@using BlazorApp1.Services

@inject StoreDbContext DbContext
@inject ICartService CartService
@inject NavigationManager NavigationManager

<PageTitle>Store - Products</PageTitle>

<!-- Hero Section with Search -->
<div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-12 px-4 rounded-2xl shadow-xl mb-8">
    <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-3">Welcome to E-Store</h1>
        <p class="text-lg md:text-xl text-blue-100 mb-6">Discover amazing products at great prices</p>

        <!-- Search Bar -->
        <div class="max-w-2xl mx-auto">
            <div class="relative">
                <input type="text"
                       @bind="searchTerm"
                       @bind:event="oninput"
                       @onkeydown="HandleSearchKeyDown"
                       placeholder="Search for products..."
                       class="w-full px-6 py-4 pr-32 rounded-full text-gray-900 text-lg focus:outline-none focus:ring-4 focus:ring-white/30 shadow-lg" />
                <button @onclick="SearchProducts"
                        class="absolute right-2 top-1/2 -translate-y-1/2 bg-blue-600 hover:bg-blue-700 text-white px-6 py-2.5 rounded-full font-semibold transition duration-200 flex items-center gap-2">
                    <i class="fas fa-search"></i>
                    <span class="hidden sm:inline">Search</span>
                </button>
            </div>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
    <!-- Sidebar: Categories & Filters -->
    <div class="lg:col-span-1">
        <div class="bg-white rounded-xl shadow-lg p-6 sticky top-24">
            <!-- Categories -->
            <div class="mb-6">
                <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
                    <i class="fas fa-tags text-blue-600"></i>
                    Categories
                </h3>
                <div class="space-y-2">
                    <button @onclick="() => FilterByCategory(null)"
                            class="@GetCategoryButtonClass(null) w-full text-left px-4 py-3 rounded-lg transition duration-200 flex items-center justify-between group">
                        <span class="font-medium">All Products</span>
                        <span class="bg-gray-200 group-hover:bg-blue-100 px-2.5 py-1 rounded-full text-sm">
                            @(categories?.Sum(c => c.Products.Count(p => p.Status == "active")) ?? 0)
                        </span>
                    </button>

                    @if (categories != null)
                    {
                        @foreach (var category in categories)
                        {
                            <button @onclick="() => FilterByCategory(category.CategoryId)"
                                    class="@GetCategoryButtonClass(category.CategoryId) w-full text-left px-4 py-3 rounded-lg transition duration-200 flex items-center justify-between group">
                                <span class="font-medium">@category.CategoryName</span>
                                <span class="bg-gray-200 group-hover:bg-blue-100 px-2.5 py-1 rounded-full text-sm">
                                    @category.Products.Count(p => p.Status == "active")
                                </span>
                            </button>
                        }
                    }
                </div>
            </div>

            <!-- Price Sort -->
            <div>
                <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
                    <i class="fas fa-sort-amount-down text-blue-600"></i>
                    Sort By
                </h3>
                <div class="space-y-2">
                    <button @onclick='() => SortProducts("name")'
                            class="@GetSortButtonClass("name") w-full text-left px-4 py-2.5 rounded-lg transition duration-200">
                        <i class="fas fa-font mr-2"></i>Name
                    </button>
                    <button @onclick='() => SortProducts("price-asc")'
                            class="@GetSortButtonClass("price-asc") w-full text-left px-4 py-2.5 rounded-lg transition duration-200">
                        <i class="fas fa-arrow-down mr-2"></i>Price: Low to High
                    </button>
                    <button @onclick='() => SortProducts("price-desc")'
                            class="@GetSortButtonClass("price-desc") w-full text-left px-4 py-2.5 rounded-lg transition duration-200">
                        <i class="fas fa-arrow-up mr-2"></i>Price: High to Low
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content: Products -->
    <div class="lg:col-span-3">
        <!-- Results Header -->
        <div class="flex flex-wrap justify-between items-center mb-6 bg-white rounded-xl shadow-sm p-4">
            <div>
                <h2 class="text-xl font-bold text-gray-900">
                    @if (selectedCategoryId.HasValue)
                    {
                        <span>@selectedCategoryName</span>
                    }
                    else
                    {
                        <span>All Products</span>
                    }
                </h2>
                <p class="text-gray-600 text-sm mt-1">@(products?.Count ?? 0) products found</p>
            </div>

            @if (!string.IsNullOrWhiteSpace(searchTerm) || selectedCategoryId.HasValue)
            {
                <button @onclick="ClearFilters"
                        class="text-blue-600 hover:text-blue-700 font-medium flex items-center gap-2 transition">
                    <i class="fas fa-times"></i>
                    Clear Filters
                </button>
            }
        </div>

        @if (isLoading)
        {
            <!-- Loading State -->
            <div class="flex flex-col items-center justify-center py-20">
                <div class="animate-spin rounded-full h-16 w-16 border-4 border-blue-600 border-t-transparent mb-4"></div>
                <p class="text-gray-600 font-medium">Loading products...</p>
            </div>
        }
        else if (products == null || !products.Any())
        {
            <!-- Empty State -->
            <div class="bg-white rounded-xl shadow-lg p-12 text-center">
                <div class="w-24 h-24 mx-auto mb-6 bg-gray-100 rounded-full flex items-center justify-center">
                    <i class="fas fa-box-open text-4xl text-gray-400"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-2">No products found</h3>
                <p class="text-gray-600 mb-6">We couldn't find any products matching your criteria</p>
                <button @onclick="ClearFilters"
                        class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition duration-200">
                    Browse All Products
                </button>
            </div>
        }
        else
        {
            <!-- Products Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6">
                @foreach (var product in products)
                {
                    var totalStock = product.Inventories?.Sum(i => i.Quantity) ?? 0;
                    <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition duration-300 overflow-hidden group cursor-pointer flex flex-col"
                         @onclick="() => ViewProductDetail(product.ProductName)">
                        <!-- Product Image -->
                        <div class="relative aspect-square bg-gray-100 overflow-hidden">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl"
                                     alt="@product.ProductName"
                                     class="w-full h-full object-cover group-hover:scale-110 transition duration-500" />
                            }
                            else
                            {
                                <div class="w-full h-full flex items-center justify-center">
                                    <i class="fas fa-box-open text-6xl text-gray-300"></i>
                                </div>
                            }

                            <!-- Stock Status Badge -->
                            <div class="absolute top-3 right-3 flex flex-col gap-2 items-end">
                                @if (totalStock > 0)
                                {
                                    <span class="bg-green-600 px-3 py-1 rounded-full text-xs font-bold text-white shadow-lg">
                                        <i class="fas fa-check-circle mr-1"></i>CÒN HÀNG
                                    </span>
                                    <span class="bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-bold text-gray-800 shadow-md">
                                        SL: @totalStock
                                    </span>
                                }
                                else
                                {
                                    <span class="bg-red-600 px-3 py-1 rounded-full text-xs font-bold text-white shadow-lg">
                                        <i class="fas fa-times-circle mr-1"></i>HẾT HÀNG
                                    </span>
                                }
                            </div>

                            <!-- Category Badge -->
                            @if (product.Category != null)
                            {
                                <div class="absolute top-3 left-3">
                                    <span class="bg-red-600 px-3 py-1 rounded-full text-xs font-bold text-white shadow-lg uppercase tracking-wide">
                                        @product.Category.CategoryName
                                    </span>
                                </div>
                            }
                        </div>

                        <!-- Product Info -->
                        <div class="p-5 flex-1 flex flex-col">
                            <h3 class="text-lg font-bold text-gray-900 mb-2 line-clamp-2 group-hover:text-blue-600 transition">
                                @product.ProductName
                            </h3>

                            <p class="text-gray-600 text-sm mb-4 line-clamp-2 flex-1">
                                @(product.Description ?? "No description available")
                            </p>

                            <!-- Price and Action - Fixed at bottom -->
                            <div class="pt-4 border-t border-gray-100 mt-auto">
                                <div class="mb-3">
                                    <div class="flex items-baseline gap-2">
                                        <span class="text-3xl font-bold text-blue-600">$@product.Price.ToString("N2")</span>
                                        @if (product.Unit != null)
                                        {
                                            <span class="text-sm text-gray-500 font-medium">/ @product.Unit</span>
                                        }
                                    </div>
                                </div>
                                <button @onclick="() => AddToCart(product)"
                                        @onclick:stopPropagation="true"
                                        disabled="@(totalStock <= 0)"
                                        class="w-full bg-blue-600 hover:bg-blue-700 disabled:bg-gray-300 disabled:cursor-not-allowed text-white px-4 py-3 rounded-lg font-semibold transition duration-200 flex items-center justify-center gap-2 shadow-md hover:shadow-lg">
                                    <i class="fas fa-cart-plus"></i>
                                    <span>Add to Cart</span>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<!-- Toast Notification -->
@if (showToast)
{
    <div class="fixed bottom-6 right-6 z-50 animate-slide-up">
        <div class="bg-green-600 text-white px-6 py-4 rounded-xl shadow-2xl flex items-center gap-3 max-w-md">
            <div class="flex-shrink-0">
                <div class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center">
                    <i class="fas fa-check text-lg"></i>
                </div>
            </div>
            <div class="flex-1">
                <p class="font-semibold">@toastMessage</p>
            </div>
            <button @onclick="() => showToast = false"
                    class="flex-shrink-0 text-white/80 hover:text-white transition">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
}

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    @@keyframes slide-up {
        from {
            transform: translateY(100%);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .animate-slide-up {
        animation: slide-up 0.3s ease-out;
    }
</style>

@code {
    [Parameter]
    public int? CategoryId { get; set; }

    private List<Product>? products;
    private List<Category>? categories;
    private bool isLoading = true;
    private string searchTerm = "";
    private int? selectedCategoryId;
    private string? selectedCategoryName;
    private string sortBy = "name";
    private bool showToast;
    private string toastMessage = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadCategories();
        
        // Set selected category from URL parameter
        if (CategoryId.HasValue)
        {
            selectedCategoryId = CategoryId;
            selectedCategoryName = categories?.FirstOrDefault(c => c.CategoryId == CategoryId)?.CategoryName;
        }
        
        await LoadProducts();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (CategoryId.HasValue && CategoryId != selectedCategoryId)
        {
            selectedCategoryId = CategoryId;
            selectedCategoryName = categories?.FirstOrDefault(c => c.CategoryId == CategoryId)?.CategoryName;
            await LoadProducts();
        }
    }

    private string GetCategoryButtonClass(int? categoryId)
    {
        var isSelected = selectedCategoryId == categoryId;
        return isSelected
            ? "bg-blue-600 text-white hover:bg-blue-700"
            : "text-gray-700 hover:bg-gray-100";
    }

    private string GetSortButtonClass(string sort)
    {
        var isSelected = sortBy == sort;
        return isSelected
            ? "bg-blue-100 text-blue-700 font-semibold"
            : "text-gray-700 hover:bg-gray-50";
    }

    private async Task LoadCategories()
    {
        categories = await DbContext.Categories
            .Include(c => c.Products)
            .Where(c => c.Status == "active")
            .ToListAsync();
    }

    private async Task LoadProducts()
    {
        isLoading = true;

        var query = DbContext.Products
            .Include(p => p.Category)
            .Include(p => p.Inventories)
            .Where(p => p.Status == "active");

        if (selectedCategoryId.HasValue)
        {
            query = query.Where(p => p.CategoryId == selectedCategoryId.Value);
        }

        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            var term = searchTerm.ToLower();
            query = query.Where(p => p.ProductName.ToLower().Contains(term) ||
                                    (p.Description != null && p.Description.ToLower().Contains(term)));
        }

        products = await query.ToListAsync();
        ApplySort();
        isLoading = false;
        StateHasChanged();
    }

    private void ApplySort()
    {
        if (products == null) return;

        products = sortBy switch
        {
            "price-asc" => products.OrderBy(p => p.Price).ToList(),
            "price-desc" => products.OrderByDescending(p => p.Price).ToList(),
            _ => products.OrderBy(p => p.ProductName).ToList()
        };
    }

    private async Task FilterByCategory(int? categoryId)
    {
        selectedCategoryId = categoryId;
        selectedCategoryName = categoryId.HasValue
            ? categories?.FirstOrDefault(c => c.CategoryId == categoryId)?.CategoryName
            : null;
        
        // Update URL
        var url = categoryId.HasValue ? $"/store/category/{categoryId}" : "/store";
        NavigationManager.NavigateTo(url);
        
        await LoadProducts();
    }

    private async Task SearchProducts()
    {
        await LoadProducts();
    }

    private async Task HandleSearchKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchProducts();
        }
    }

    private async Task ClearFilters()
    {
        searchTerm = "";
        selectedCategoryId = null;
        selectedCategoryName = null;
        await LoadProducts();
    }

    private void SortProducts(string sort)
    {
        sortBy = sort;
        ApplySort();
        StateHasChanged();
    }

    private async Task AddToCart(Product product)
    {
        await CartService.AddToCartAsync(product);
        toastMessage = $"{product.ProductName} added to cart!";
        showToast = true;

        await Task.Delay(3000);
        showToast = false;
        await InvokeAsync(StateHasChanged);
    }

    private void ViewProductDetail(string productName)
    {
        var encodedName = Uri.EscapeDataString(productName);
        NavigationManager.NavigateTo($"/products/{encodedName}");
    }
}
