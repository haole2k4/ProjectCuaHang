@page "/store/categories"
@layout StoreLayout

@using Microsoft.EntityFrameworkCore
@using StoreManagementAPI.Data
@using StoreManagementAPI.Models
@using Blazorise

@inject StoreDbContext DbContext
@inject NavigationManager NavigationManager

<PageTitle>Categories</PageTitle>

<Heading Size="HeadingSize.Is2" class="mb-6">
    <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Tags" class="mr-2" /> Categories
</Heading>

@if (isLoading)
{
    <div class="loading-spinner">
        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
    </div>
}
else if (categories == null || !categories.Any())
{
    <div class="empty-state bg-white rounded-lg shadow-lg p-12">
        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Tags" class="text-6xl text-gray-400 mb-4" />
        <Heading Size="HeadingSize.Is4" class="mb-2">No categories found</Heading>
        <Paragraph TextColor="TextColor.Muted">No product categories are available at the moment.</Paragraph>
    </div>
}
else
{
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        @foreach (var category in categories)
        {
            <Card class="category-card card-shadow hover:card-shadow-lg transition-all" @onclick="() => NavigateToCategory(category.CategoryId)">
                <CardBody class="text-center py-10">
                    <div class="text-primary text-5xl mb-4">
                        <Icon Name="@GetCategoryIcon(category.CategoryName)" />
                    </div>
                    <CardTitle Size="5" class="font-semibold mb-2">@category.CategoryName</CardTitle>
                    <Paragraph TextColor="TextColor.Muted">
                        @category.Products.Count(p => p.Status == "active") Products
                    </Paragraph>
                </CardBody>
                <CardFooter Background="Background.Primary" TextColor="TextColor.White" class="text-center cursor-pointer hover:bg-blue-600 transition">
                    <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.ArrowRight" class="mr-2" /> Browse
                </CardFooter>
            </Card>
        }
    </div>
}

@code {
    private List<Category>? categories;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        categories = await DbContext.Categories
            .Include(c => c.Products)
            .Where(c => c.Status == "active")
            .OrderBy(c => c.CategoryName)
            .ToListAsync();
        isLoading = false;
    }

    private void NavigateToCategory(int categoryId)
    {
        NavigationManager.NavigateTo($"/store?category={categoryId}");
    }

    private object GetCategoryIcon(string categoryName)
    {
        var name = categoryName.ToLower();
        return name switch
        {
            var n when n.Contains("electronic") => "fa-laptop",
            var n when n.Contains("cloth") || n.Contains("fashion") => "fa-tshirt",
            var n when n.Contains("food") || n.Contains("grocery") => "fa-shopping-basket",
            var n when n.Contains("book") => "fa-book",
            var n when n.Contains("sport") => "fa-running",
            var n when n.Contains("home") || n.Contains("furniture") => "fa-home",
            var n when n.Contains("beauty") || n.Contains("health") => "fa-heart",
            var n when n.Contains("toy") || n.Contains("game") => "fa-gamepad",
            var n when n.Contains("music") => "fa-music",
            var n when n.Contains("phone") || n.Contains("mobile") => "fa-mobile-alt",
            _ => "fa-th-large"
        };
    }
}
