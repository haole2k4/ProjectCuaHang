<Modal @ref="productModal">
    <ModalContent Size="ModalSize.Large">
        <ModalHeader class="bg-white border-b border-gray-200">
            <ModalTitle class="!text-blue-600 !font-bold !text-xl">@(isEditMode ? "Edit Product" : "Add New Product")</ModalTitle>
            <CloseButton Clicked="CloseModal" />
        </ModalHeader>
        <ModalBody class="bg-white">
            <div class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-bold text-gray-900 mb-2">Product Name *</label>
                        <TextEdit @bind-Text="currentProduct.ProductName" Placeholder="Enter product name" class="w-full !border-gray-300 !bg-white !text-gray-900 !border-2" />
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-gray-900 mb-2">Barcode</label>
                        <TextEdit @bind-Text="currentProduct.Barcode" Placeholder="Auto-generated if empty" class="w-full !border-gray-300 !bg-white !text-gray-900 !border-2" />
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        <label class="block text-sm font-bold text-gray-900 mb-2">Category</label>
                        <Select TValue="int?" @bind-SelectedValue="currentProduct.CategoryId" class="w-full !border-gray-300 !bg-white !text-gray-900 !border-2">
                            <SelectItem Value="@((int?)null)">Select Category</SelectItem>
                            @foreach (var category in categories)
                            {
                                <SelectItem Value="@category.CategoryId">@category.CategoryName</SelectItem>
                            }
                        </Select>
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-gray-900 mb-2">Price *</label>
                        <NumericEdit TValue="decimal" @bind-Value="currentProduct.Price" Placeholder="0.00" class="w-full !border-gray-300 !bg-white !text-gray-900 !border-2" />
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-gray-900 mb-2">Unit</label>
                        <TextEdit @bind-Text="currentProduct.Unit" Placeholder="pcs" class="w-full !border-gray-300 !bg-white !text-gray-900 !border-2" />
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-bold text-gray-900 mb-2">Description</label>
                    <MemoEdit @bind-Text="currentProduct.Description" Rows="3" Placeholder="Enter product description" class="w-full !border-gray-300 !bg-white !text-gray-900 !border-2" />
                </div>

                <div>
                    <label class="block text-sm font-bold text-gray-900 mb-2">Product Image</label>
                    <div class="flex gap-4 items-start">
                        @if (!string.IsNullOrEmpty(currentProduct.ImageUrl))
                        {
                            <div class="relative">
                                <img src="@currentProduct.ImageUrl" alt="Preview" class="w-32 h-32 object-cover rounded-lg border-2 border-gray-300 shadow-md" />
                                <Button Color="Color.Danger" Size="Size.Small" Clicked="RemoveImage" class="absolute -top-2 -right-2 !rounded-full !w-8 !h-8 !p-0 shadow-lg">
                                    <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Times" />
                                </Button>
                            </div>
                        }
                        <div class="flex-1">
                            <InputFile OnChange="HandleImageUpload" accept="image/*" class="hidden" id="imageUpload" />
                            <label for="imageUpload" class="cursor-pointer inline-flex items-center px-4 py-2 bg-white border-2 border-gray-300 rounded-lg hover:bg-gray-100 text-gray-900 font-bold shadow-sm">
                                <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Upload" class="mr-2" />
                                Choose Image
                            </label>
                            <p class="text-sm text-gray-600 mt-2">Max 5MB, PNG/JPG/JPEG</p>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <Alert Color="Color.Danger" Visible class="!bg-red-50 !border-red-200 !text-red-900">
                        @errorMessage
                    </Alert>
                }
            </div>
        </ModalBody>
        <ModalFooter class="bg-gray-50 border-t border-gray-200">
            <Button Color="Color.Secondary" Clicked="CloseModal" class="!bg-white !border-2 !border-gray-300 !text-gray-900 hover:!bg-gray-100 shadow-sm">Cancel</Button>
            <Button Color="Color.Primary" Clicked="SaveProduct" Loading="isSaving" class="!bg-blue-600 hover:!bg-blue-700 !text-white shadow-md">
                @(isEditMode ? "Update" : "Create")
            </Button>
        </ModalFooter>
    </ModalContent>
</Modal>

@code {
    private List<ProductDto>? products;
    private List<Category> categories = new();
    private Modal productModal = null!;
    private bool isEditMode = false;
    private bool isSaving = false;
    private string? errorMessage;
    private string? priceErrorMessage;

    // Search & Filter
    private ProductSearchDto searchCriteria = new ProductSearchDto
    {
        PageNumber = 1,
        PageSize = 10,
        SortBy = "ProductName",
        SortDirection = "asc"
    };
    private ProductSearchResultDto? searchResult;

    // Pagination
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalItems = 0;

    private class ProductFormModel
    {
        public int ProductId { get; set; }
        public string ProductName { get; set; } = string.Empty;
        public string? Barcode { get; set; }
        public int? CategoryId { get; set; }
        public decimal Price { get; set; }
        public string Unit { get; set; } = "pcs";
        public string? Description { get; set; }
        public string? ImageUrl { get; set; }
    }

    private ProductFormModel currentProduct = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadCategories();
        await SearchProducts();
    }

    private async Task LoadCategories()
    {
        categories = await DbContext.Categories
            .Where(c => c.Status == "active")
            .OrderBy(c => c.CategoryName)
            .ToListAsync();
    }

    private async Task SearchProducts()
    {
        try
        {
            // Ensure currentPage is valid
            if (currentPage < 1) currentPage = 1;
            
            searchCriteria.PageNumber = currentPage;
            searchCriteria.PageSize = pageSize;

            searchResult = await ProductService.SearchProductsAdvancedAsync(searchCriteria);

            products = searchResult.Products.ToList();
            totalItems = searchResult.TotalCount;

            // If current page is beyond total pages, reset to last page
            if (totalItems > 0)
            {
                var totalPages = (int)Math.Ceiling(totalItems / (double)pageSize);
                if (currentPage > totalPages)
                {
                    currentPage = totalPages;
                    searchCriteria.PageNumber = currentPage;
                    searchResult = await ProductService.SearchProductsAdvancedAsync(searchCriteria);
                    products = searchResult.Products.ToList();
                }
            }

            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error searching products: {ex.Message}";
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task HandlePageChanged(int page)
    {
        currentPage = page;
        await SearchProducts();
    }

    private async Task ClearFilters()
    {
        searchCriteria = new ProductSearchDto
        {
            PageNumber = 1,
            PageSize = pageSize,
            SortBy = "ProductName",
            SortDirection = "asc"
        };
        priceErrorMessage = null;
        currentPage = 1;
        await SearchProducts();
    }

    // Auto-search event handlers
    private async Task OnSearchTextChanged(string value)
    {
        searchCriteria.Name = value;
        currentPage = 1;
        await SearchProducts();
    }

    private async Task OnCategoryChanged(int? value)
    {
        searchCriteria.CategoryId = value;
        currentPage = 1;
        await SearchProducts();
    }

    private async Task OnStatusChanged(string? value)
    {
        searchCriteria.Status = value;
        currentPage = 1;
        await SearchProducts();
    }

    private async Task OnMinPriceChanged(decimal? value)
    {
        searchCriteria.MinPrice = value;
        
        // Validate: MinPrice should not be greater than MaxPrice
        if (value.HasValue && searchCriteria.MaxPrice.HasValue && value.Value > searchCriteria.MaxPrice.Value)
        {
            priceErrorMessage = $"Min price ({value:N0}) cannot be greater than max price ({searchCriteria.MaxPrice:N0})";
            await InvokeAsync(StateHasChanged);
            return;
        }
        
        priceErrorMessage = null;
        currentPage = 1;
        await SearchProducts();
    }

    private async Task OnMaxPriceChanged(decimal? value)
    {
        searchCriteria.MaxPrice = value;
        
        // Validate: MaxPrice should not be less than MinPrice
        if (value.HasValue && searchCriteria.MinPrice.HasValue && value.Value < searchCriteria.MinPrice.Value)
        {
            priceErrorMessage = $"Max price ({value:N0}) cannot be less than min price ({searchCriteria.MinPrice:N0})";
            await InvokeAsync(StateHasChanged);
            return;
        }
        
        priceErrorMessage = null;
        currentPage = 1;
        await SearchProducts();
    }

    private async Task OnSortByChanged(string? value)
    {
        searchCriteria.SortBy = value;
        await SearchProducts();
    }

    private async Task OnSortDirectionChanged(string? value)
    {
        searchCriteria.SortDirection = value;
        await SearchProducts();
    }

    private void OpenAddModal()
    {
        isEditMode = false;
        currentProduct = new ProductFormModel { Unit = "pcs", Price = 0 };
        errorMessage = null;
        productModal.Show();
    }

    private void OpenEditModal(ProductDto product)
    {
        isEditMode = true;
        currentProduct = new ProductFormModel
        {
            ProductId = product.ProductId,
            ProductName = product.ProductName,
            Barcode = product.Barcode,
            CategoryId = product.CategoryId,
            Price = product.Price,
            Unit = product.Unit,
            Description = product.Description,
            ImageUrl = product.ImageUrl
        };
        errorMessage = null;
        productModal.Show();
    }

    private void CloseModal()
    {
        productModal.Hide();
        errorMessage = null;
    }

    private async Task SaveProduct()
    {
        errorMessage = null;
        
        if (string.IsNullOrWhiteSpace(currentProduct.ProductName))
        {
            errorMessage = "Product name is required";
            return;
        }

        if (currentProduct.Price <= 0)
        {
            errorMessage = "Price must be greater than 0";
            return;
        }

        isSaving = true;
        try
        {
            if (isEditMode)
            {
                var updateDto = new UpdateProductDto
                {
                    ProductName = currentProduct.ProductName,
                    Barcode = currentProduct.Barcode,
                    CategoryId = currentProduct.CategoryId,
                    Price = currentProduct.Price,
                    Unit = currentProduct.Unit,
                    Description = currentProduct.Description,
                    ImageUrl = currentProduct.ImageUrl
                };
                await ProductService.UpdateProductAsync(currentProduct.ProductId, updateDto);
            }
            else
            {
                var createDto = new CreateProductDto
                {
                    ProductName = currentProduct.ProductName,
                    Barcode = currentProduct.Barcode,
                    CategoryId = currentProduct.CategoryId,
                    Price = currentProduct.Price,
                    Unit = currentProduct.Unit,
                    Description = currentProduct.Description,
                    ImageUrl = currentProduct.ImageUrl
                };
                await ProductService.CreateProductAsync(createDto);
            }

            await SearchProducts();
            CloseModal();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task HandleImageUpload(InputFileChangeEventArgs e)
    {
        errorMessage = null;
        var file = e.File;

        if (file.Size > 5 * 1024 * 1024)
        {
            errorMessage = "File size must be less than 5MB";
            return;
        }

        var allowedTypes = new[] { "image/png", "image/jpeg", "image/jpg" };
        if (!allowedTypes.Contains(file.ContentType.ToLower()))
        {
            errorMessage = "Only PNG, JPG, and JPEG files are allowed";
            return;
        }

        try
        {
            var staticsPath = Path.Combine(Environment.WebRootPath, "Statics");
            if (!Directory.Exists(staticsPath))
            {
                Directory.CreateDirectory(staticsPath);
            }

            var fileName = $"{Guid.NewGuid()}{Path.GetExtension(file.Name)}";
            var filePath = Path.Combine(staticsPath, fileName);

            using (var stream = new FileStream(filePath, FileMode.Create))
            {
                await file.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024).CopyToAsync(stream);
            }

            currentProduct.ImageUrl = $"/Statics/{fileName}";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error uploading image: {ex.Message}";
        }
    }

    private void RemoveImage()
    {
        if (!string.IsNullOrEmpty(currentProduct.ImageUrl))
        {
            try
            {
                var imagePath = Path.Combine(Environment.WebRootPath, currentProduct.ImageUrl.TrimStart('/'));
                if (File.Exists(imagePath))
                {
                    File.Delete(imagePath);
                }
            }
            catch { }
            
            currentProduct.ImageUrl = null;
        }
    }

    private async Task DeleteProduct(ProductDto product)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Bạn có chắc chắn muốn xóa/ẩn '{product.ProductName}'?");
        if (!confirmed) return;

        try
        {
            var result = await ProductService.DeleteProductAsync(product.ProductId);
            
            if (!string.IsNullOrEmpty(product.ImageUrl))
            {
                try
                {
                    var imagePath = Path.Combine(Environment.WebRootPath, product.ImageUrl.TrimStart('/'));
                    if (File.Exists(imagePath))
                    {
                        File.Delete(imagePath);
                    }
                }
                catch { }
            }

            await SearchProducts();

            if (result.SoftDeleted)
            {
                await JSRuntime.InvokeVoidAsync("alert", result.Message);
            }
            else if (result.Success)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Xóa sản phẩm thành công");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Lỗi: {ex.Message}");
        }
    }

    private async Task RestoreProduct(ProductDto product)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Bạn có muốn phục hồi sản phẩm '{product.ProductName}'?");
        if (!confirmed) return;

        try
        {
            var result = await ProductService.RestoreProductAsync(product.ProductId);

            if (result)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Phục hồi sản phẩm thành công");
                await SearchProducts();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Không tìm thấy sản phẩm");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Lỗi: {ex.Message}");
        }
    }
