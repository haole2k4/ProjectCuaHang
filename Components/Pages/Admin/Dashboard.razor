                                    <TableRowCell ColumnSpan="5" class="text-center py-12">
                                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Inbox" class="text-4xl text-gray-300 mb-3" />
                                        <p class="text-gray-600 font-medium">No @(transactionView) found</p>
                                    </TableRowCell>
                                </TableRow>
                            }
                        </TableBody>
                    </Table>
                </div>
            </CardBody>
            <div class="bg-gradient-to-r from-blue-50 to-purple-50 border-t border-gray-200 p-4">
                <div class="flex justify-center">
                    <Button Color="Color.Primary" Size="Size.Small" To="/admin/orders" Type="ButtonType.Link" Class="!bg-blue-600 !text-white hover:!bg-blue-700 rounded-lg shadow-md px-6">
                        View All Orders <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.ArrowRight" class="ml-2" />
                    </Button>
                </div>
            </div>
        </Card>
    }
