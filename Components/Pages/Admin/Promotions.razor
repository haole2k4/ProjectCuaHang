@page "/admin/promotions"
@rendermode InteractiveServer

@using StoreManagementAPI.Data
@using StoreManagementAPI.Models
@using StoreManagementAPI.Services
@using StoreManagementAPI.DTOs
@using Microsoft.EntityFrameworkCore
@using Blazorise

@inject StoreDbContext DbContext
@inject IPromotionService PromotionService
@inject IJSRuntime JSRuntime

<PageTitle>Promotions - Admin</PageTitle>

<div class="flex justify-between items-center mb-6">
    <div>
        <Heading Size="HeadingSize.Is3" class="text-gray-900 font-bold">
            Promotions
        </Heading>
        <Paragraph class="text-gray-600 mb-0">Manage discount codes and promotional campaigns</Paragraph>
    </div>
    <Button Color="Color.Primary" Clicked="OpenAddModal" class="!text-white !bg-blue-600 hover:!bg-blue-700 shadow-md">
        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Plus" class="mr-2" /> Create Promotion
    </Button>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
    <Card class="shadow-md border-0 !bg-white">
        <CardBody class="p-6">
            <div class="flex items-center justify-between">
                <div>
                    <Paragraph class="text-gray-600 text-sm mb-1">Total Promotions</Paragraph>
                    <Heading Size="HeadingSize.Is3" class="text-gray-900 mb-0">@promotions?.Count</Heading>
                </div>
                <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center">
                    <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Percent" class="text-purple-600 text-xl" />
                </div>
            </div>
        </CardBody>
    </Card>

    <Card class="shadow-md border-0 !bg-white">
        <CardBody class="p-6">
            <div class="flex items-center justify-between">
                <div>
                    <Paragraph class="text-gray-600 text-sm mb-1">Active</Paragraph>
                    <Heading Size="HeadingSize.Is3" class="text-green-600 mb-0">@promotions?.Count(p => p.Status == "active" && p.EndDate >= DateTime.Now)</Heading>
                </div>
                <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
                    <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.CheckCircle" class="text-green-600 text-xl" />
                </div>
            </div>
        </CardBody>
    </Card>

    <Card class="shadow-md border-0 !bg-white">
        <CardBody class="p-6">
            <div class="flex items-center justify-between">
                <div>
                    <Paragraph class="text-gray-600 text-sm mb-1">Expired</Paragraph>
                    <Heading Size="HeadingSize.Is3" class="text-red-600 mb-0">@promotions?.Count(p => p.EndDate < DateTime.Now)</Heading>
                </div>
                <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center">
                    <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.CalendarTimes" class="text-red-600 text-xl" />
                </div>
            </div>
        </CardBody>
    </Card>

    <Card class="shadow-md border-0 !bg-white">
        <CardBody class="p-6">
            <div class="flex items-center justify-between">
                <div>
                    <Paragraph class="text-gray-600 text-sm mb-1">Total Usage</Paragraph>
                    <Heading Size="HeadingSize.Is3" class="text-blue-600 mb-0">@promotions?.Sum(p => p.UsedCount)</Heading>
                </div>
                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                    <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.ChartLine" class="text-blue-600 text-xl" />
                </div>
            </div>
        </CardBody>
    </Card>
</div>

<!-- Advanced Search Panel -->
<Card class="!bg-white shadow-md border border-gray-200 rounded-xl overflow-hidden mb-6">
    <CardBody>
        <div class="flex items-center justify-between mb-4">
            <Heading Size="HeadingSize.Is5" class="text-gray-900 font-bold mb-0">
                <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Search" class="mr-2" />
                Search & Filter Promotions
            </Heading>
            <Button Color="Color.Light" Size="Size.Small" Clicked="ClearFilters" class="!border !border-gray-300">
                <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Redo" class="mr-1" /> Clear
            </Button>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <!-- Search Term -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Promo Code</label>
                <TextEdit Text="@searchCriteria.SearchTerm"
                          TextChanged="@OnSearchTextChanged"
                          Placeholder="Search code..."
                          class="w-full !border-gray-300" />
            </div>

            <!-- Status Filter -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Status</label>
                <Select TValue="string?"
                        SelectedValue="searchCriteria.Status"
                        SelectedValueChanged="@OnStatusChanged"
                        class="w-full !border-gray-300">
                    <SelectItem Value="@((string?)null)">All Status</SelectItem>
                    <SelectItem Value="@("active")">Active</SelectItem>
                    <SelectItem Value="@("inactive")">Inactive</SelectItem>
                </Select>
            </div>

            <!-- Discount Type Filter -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Discount Type</label>
                <Select TValue="string?"
                        SelectedValue="searchCriteria.DiscountType"
                        SelectedValueChanged="@OnDiscountTypeChanged"
                        class="w-full !border-gray-300">
                    <SelectItem Value="@((string?)null)">All Types</SelectItem>
                    <SelectItem Value="@("percent")">Percentage</SelectItem>
                    <SelectItem Value="@("fixed")">Fixed Amount</SelectItem>
                </Select>
            </div>

            <!-- Apply Type -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Apply To</label>
                <Select TValue="string"
                        SelectedValue="searchCriteria.ApplyType"
                        SelectedValueChanged="@OnApplyTypeChanged"
                        class="w-full !border-gray-300">
                    <SelectItem Value="@((string?)null)">All Apply Types</SelectItem>
                    <SelectItem Value="@("order")">Order</SelectItem>
                    <SelectItem Value="@("product")">Specific Product</SelectItem>
                    <SelectItem Value="@("combo")">Combo</SelectItem>
                </Select>
            </div>
        </div>

        <!-- Date Range Row -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Valid Date Range</label>
                <div class="grid grid-cols-2 gap-2">
                    <DateEdit TValue="DateTime?"
                              Date="searchCriteria.StartDate"
                              DateChanged="@OnStartDateChanged"
                              Placeholder="Start"
                              class="w-full !border-gray-300" />
                    <DateEdit TValue="DateTime?"
                              Date="searchCriteria.EndDate"
                              DateChanged="@OnEndDateChanged"
                              Placeholder="End"
                              class="w-full !border-gray-300" />
                </div>
                @if (!string.IsNullOrEmpty(dateErrorMessage))
                {
                    <div class="mt-2 text-red-600 text-sm font-semibold">
                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.ExclamationTriangle" class="mr-1" />
                        @dateErrorMessage
                    </div>
                }
            </div>
        </div>

        @if (searchResult != null)
        {
            <div class="mt-4 pt-4 border-t border-gray-200">
                <span class="text-gray-600">
                    Found <span class="font-bold text-blue-600">@searchResult.TotalCount</span> promotions
                </span>
            </div>
        }
    </CardBody>
</Card>

<!-- Promotions Table -->
<Card class="!bg-white shadow-xl border border-gray-200 rounded-xl overflow-hidden">
    <CardBody Padding="Padding.Is0">
        <div class="overflow-x-auto">
            <Table class="mb-0 w-full">
                <TableHeader>
                    <TableRow class="bg-white border-b-2 border-gray-200">
                        <TableHeaderCell class="px-4 py-3 text-center text-gray-900 font-bold text-sm uppercase tracking-wider">ID</TableHeaderCell>
                        <TableHeaderCell class="px-4 py-3 text-center text-gray-900 font-bold text-sm uppercase tracking-wider">Code</TableHeaderCell>
                        <TableHeaderCell class="px-4 py-3 text-center text-gray-900 font-bold text-sm uppercase tracking-wider">Type</TableHeaderCell>
                        <TableHeaderCell class="px-4 py-3 text-center text-gray-900 font-bold text-sm uppercase tracking-wider">Discount</TableHeaderCell>
                        <TableHeaderCell class="px-4 py-3 text-center text-gray-900 font-bold text-sm uppercase tracking-wider">Min Order</TableHeaderCell>
                        <TableHeaderCell class="px-4 py-3 text-center text-gray-900 font-bold text-sm uppercase tracking-wider">Usage</TableHeaderCell>
                        <TableHeaderCell class="px-4 py-3 text-center text-gray-900 font-bold text-sm uppercase tracking-wider">Valid Period</TableHeaderCell>
                        <TableHeaderCell class="px-4 py-3 text-center text-gray-900 font-bold text-sm uppercase tracking-wider">Status</TableHeaderCell>
                        <TableHeaderCell class="px-4 py-3 text-center text-gray-900 font-bold text-sm uppercase tracking-wider">Actions</TableHeaderCell>
                    </TableRow>
                </TableHeader>
                <TableBody class="bg-white divide-y divide-gray-200">
                    @if (promotions != null && promotions.Any())
                    {
                        @foreach (var promo in promotions)
                        {
                            <TableRow class="bg-white hover:bg-gray-100 transition-colors duration-150">
                                <TableRowCell class="px-4 py-3 text-center">
                                    <span class="text-gray-600 font-medium">#@promo.PromoId</span>
                                </TableRowCell>
                                <TableRowCell class="px-4 py-3 text-center">
                                    <div class="flex items-center gap-2 justify-center">
                                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Tag" class="text-purple-500" />
                                        <span class="font-mono font-bold text-gray-900">@promo.PromoCode</span>
                                    </div>
                                </TableRowCell>
                                <TableRowCell class="px-4 py-3 text-center">
                                    <Badge Color="@GetApplyTypeColor(promo.ApplyType)" class="font-semibold text-sm px-3 py-1">
                                        @GetApplyTypeText(promo.ApplyType)
                                    </Badge>
                                </TableRowCell>
                                <TableRowCell class="px-4 py-3 text-center">
                                    @if (promo.DiscountType == "percent")
                                    {
                                        <span class="text-green-600 font-bold">@promo.DiscountValue%</span>
                                    }
                                    else
                                    {
                                        <span class="text-green-600 font-bold">$@promo.DiscountValue</span>
                                    }
                                </TableRowCell>
                                <TableRowCell class="px-4 py-3 text-center">
                                    <span class="text-gray-900 font-medium">$@promo.MinOrderAmount</span>
                                </TableRowCell>
                                <TableRowCell class="px-4 py-3 text-center">
                                    <div class="flex items-center gap-3 justify-center">
                                        <div class="w-24 bg-gray-200 rounded-full h-2 overflow-hidden">
                                            <div class="h-full rounded-full transition-all duration-500 @GetUsageColorClass(promo)" style="width: @GetUsageProgress(promo)%"></div>
                                        </div>
                                        <span class="text-sm font-semibold text-gray-900 w-16 text-left">@promo.UsedCount/@(promo.UsageLimit == 0 ? "?" : promo.UsageLimit.ToString())</span>
                                    </div>
                                </TableRowCell>
                                <TableRowCell class="px-4 py-3 text-center">
                                    <div class="text-sm">
                                        <div class="text-gray-900 font-medium">@promo.StartDate.ToString("dd/MM/yyyy")</div>
                                        <div class="text-gray-600">To @promo.EndDate.ToString("dd/MM/yyyy")</div>
                                    </div>
                                </TableRowCell>
                                <TableRowCell class="px-4 py-3 text-center">
                                    @if (promo.EndDate < DateTime.Now)
                                    {
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-red-100 text-red-800">
                                            Expired
                                        </span>
                                    }
                                    else if (promo.Status == "active")
                                    {
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-green-100 text-green-800">
                                            Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-red-100 text-red-800">
                                            @promo.Status
                                        </span>
                                    }
                                </TableRowCell>
                                <TableRowCell class="px-4 py-3 text-right">
                                    <Buttons class="gap-2 justify-end">
                                        <Button Color="Color.Light" Size="Size.Small" Clicked="() => OpenEditModal(promo)" class="!border-2 !border-gray-300 hover:!bg-gray-200 !text-gray-900 shadow-sm">
                                            <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Edit" />
                                        </Button>
                                        <Button Color="Color.Danger" Size="Size.Small" Clicked="() => DeletePromotion(promo)" class="!bg-red-600 hover:!bg-red-700 !text-white shadow-sm">
                                            <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Trash" />
                                        </Button>
                                    </Buttons>
                                </TableRowCell>
                            </TableRow>
                        }
                    }
                    else
                    {
                        <TableRow class="bg-white">
                            <TableRowCell ColumnSpan="9" class="text-center py-12">
                                <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Percent" class="text-gray-400 text-4xl mb-3" />
                                <p class="text-gray-600 font-medium">No promotions found</p>
                            </TableRowCell>
                        </TableRow>
                    }
                </TableBody>
            </Table>
        </div>
        
        <PaginationComponent CurrentPage="@currentPage" PageSize="@pageSize" TotalItems="@totalItems" OnPageChanged="@HandlePageChanged" />
    </CardBody>
</Card>

<!-- Add/Edit Promotion Modal -->
<Modal @ref="promotionModal">
    <ModalContent Size="ModalSize.ExtraLarge">
        <ModalHeader class="bg-white border-b border-gray-200">
            <ModalTitle class="text-gray-900 font-bold">@(isEditMode ? "Edit Promotion" : "Create New Promotion")</ModalTitle>
            <CloseButton Clicked="CloseModal" />
        </ModalHeader>
        <ModalBody class="bg-white">
            <div class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-bold text-gray-900 mb-2">Promo Code *</label>
                        <TextEdit @bind-Text="currentPromotion.PromoCode" Placeholder="e.g., SUMMER2024" class="w-full !border-gray-300 uppercase" />
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-gray-900 mb-2">Apply Type *</label>
                        <Select TValue="string" @bind-SelectedValue="currentPromotion.ApplyType" class="w-full !border-gray-300">
                            <SelectItem Value="@("order")">Entire Order</SelectItem>
                            <SelectItem Value="@("product")">Specific Products</SelectItem>
                            <SelectItem Value="@("combo")">Product Combo</SelectItem>
                        </Select>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        <label class="block text-sm font-bold text-gray-900 mb-2">Discount Type *</label>
                        <Select TValue="string" @bind-SelectedValue="currentPromotion.DiscountType" class="w-full !border-gray-300">
                            <SelectItem Value="@("percent")">Percentage</SelectItem>
                            <SelectItem Value="@("fixed")">Fixed Amount</SelectItem>
                        </Select>
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-gray-900 mb-2">Discount Value *</label>
                        <NumericEdit TValue="decimal" @bind-Value="currentPromotion.DiscountValue" Placeholder="0.00" class="w-full !border-gray-300" />
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-gray-900 mb-2">Min Order Amount</label>
                        <NumericEdit TValue="decimal" @bind-Value="currentPromotion.MinOrderAmount" Placeholder="0.00" class="w-full !border-gray-300" />
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        <label class="block text-sm font-bold text-gray-900 mb-2">Start Date *</label>
                        <DateEdit TValue="DateTime" @bind-Date="currentPromotion.StartDate" class="w-full !border-gray-300" />
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-gray-900 mb-2">End Date *</label>
                        <DateEdit TValue="DateTime" @bind-Date="currentPromotion.EndDate" class="w-full !border-gray-300" />
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-gray-900 mb-2">Usage Limit (0 = unlimited)</label>
                        <NumericEdit TValue="int" @bind-Value="currentPromotion.UsageLimit" Placeholder="0" class="w-full !border-gray-300" />
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-bold text-gray-900 mb-2">Description</label>
                    <MemoEdit @bind-Text="currentPromotion.Description" Rows="2" Placeholder="Enter promotion description" class="w-full !border-gray-300" />
                </div>

                <div>
                    <label class="block text-sm font-bold text-gray-900 mb-2">Status</label>
                    <Select TValue="string" @bind-SelectedValue="currentPromotion.Status" class="w-full !border-gray-300">
                        <SelectItem Value="@("active")">Active</SelectItem>
                        <SelectItem Value="@("inactive")">Inactive</SelectItem>
                    </Select>
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <Alert Color="Color.Danger" Visible class="!bg-red-50 !border-red-200 !text-red-900">
                        @errorMessage
                    </Alert>
                }
            </div>
        </ModalBody>
        <ModalFooter class="bg-gray-50 border-t border-gray-200">
            <Button Color="Color.Secondary" Clicked="CloseModal" class="!bg-white !border-2 !border-gray-300 !text-gray-900 hover:!bg-gray-100 shadow-sm">Cancel</Button>
            <Button Color="Color.Primary" Clicked="SavePromotion" Loading="isSaving" class="!bg-blue-600 hover:!bg-blue-700 !text-white shadow-md">
                @(isEditMode ? "Update" : "Create")
            </Button>
        </ModalFooter>
    </ModalContent>
</Modal>

@code {
    private List<Promotion>? allPromotions;
    private List<Promotion>? promotions;
    private Modal promotionModal = null!;
    private bool isEditMode = false;
    private bool isSaving = false;
    private string? errorMessage;
    private string? dateErrorMessage;

    private CreatePromotionDto currentPromotion = new();

    // Pagination
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalItems = 0;

    // Search & Filter
    private PromotionSearchDto searchCriteria = new PromotionSearchDto
    {
        PageNumber = 1,
        PageSize = 10,
        SortBy = "StartDate",
        SortDirection = "desc"
    };
    private PromotionSearchResultDto? searchResult;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        await SearchPromotions();
    }

    private async Task LoadData()
    {
        allPromotions = await DbContext.Promotions
            .OrderByDescending(p => p.StartDate)
            .ToListAsync();
        
        totalItems = allPromotions?.Count ?? 0;
        UpdatePagedData();
    }

    private async Task SearchPromotions()
    {
        try
        {
            searchCriteria.PageNumber = currentPage;
            searchCriteria.PageSize = pageSize;

            searchResult = await PromotionService.SearchPromotionsAdvancedAsync(searchCriteria);

            // Convert PromotionDto to Promotion for compatibility
            var promoIds = searchResult.Promotions.Select(x => x.PromoId).ToList();
            allPromotions = await DbContext.Promotions
                .Where(p => promoIds.Contains(p.PromoId))
                .OrderByDescending(p => p.StartDate)
                .ToListAsync();

            promotions = allPromotions;
            totalItems = searchResult.TotalCount;

            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error searching promotions: {ex.Message}";
        }
    }

    private void UpdatePagedData()
    {
        if (allPromotions != null)
        {
            promotions = allPromotions
                .Skip((currentPage - 1) * pageSize)
                .Take(pageSize)
                .ToList();
        }
    }

    private async Task HandlePageChanged(int page)
    {
        currentPage = page;
        await SearchPromotions();
    }

    private async Task ClearFilters()
    {
        searchCriteria = new PromotionSearchDto
        {
            PageNumber = 1,
            PageSize = pageSize,
            SortBy = "StartDate",
            SortDirection = "desc"
        };
        dateErrorMessage = null;
        currentPage = 1;
        await SearchPromotions();
    }

    // Auto-search event handlers
    private async Task OnSearchTextChanged(string value)
    {
        searchCriteria.SearchTerm = value;
        currentPage = 1;
        await SearchPromotions();
    }

    private async Task OnStatusChanged(string? value)
    {
        searchCriteria.Status = value;
        currentPage = 1;
        await SearchPromotions();
    }

    private async Task OnDiscountTypeChanged(string? value)
    {
        searchCriteria.DiscountType = value;
        currentPage = 1;
        await SearchPromotions();
    }

    private async Task OnApplyTypeChanged(string? value)
    {
        searchCriteria.ApplyType = value;
        currentPage = 1;
        await SearchPromotions();
    }

    private async Task OnStartDateChanged(DateTime? value)
    {
        searchCriteria.StartDate = value;
        
        // Validate: StartDate should not be after EndDate
        if (value.HasValue && searchCriteria.EndDate.HasValue && value.Value > searchCriteria.EndDate.Value)
        {
            dateErrorMessage = $"Start date cannot be after end date";
            await InvokeAsync(StateHasChanged);
            return;
        }
        
        dateErrorMessage = null;
        currentPage = 1;
        await SearchPromotions();
    }

    private async Task OnEndDateChanged(DateTime? value)
    {
        searchCriteria.EndDate = value;
        
        // Validate: EndDate should not be before StartDate
        if (value.HasValue && searchCriteria.StartDate.HasValue && value.Value < searchCriteria.StartDate.Value)
        {
            dateErrorMessage = $"End date cannot be before start date";
            await InvokeAsync(StateHasChanged);
            return;
        }
        
        dateErrorMessage = null;
        currentPage = 1;
        await SearchPromotions();
    }

    private void OpenAddModal()
    {
        isEditMode = false;
        currentPromotion = new CreatePromotionDto
        {
            StartDate = DateTime.Now,
            EndDate = DateTime.Now.AddDays(30),
            Status = "active",
            DiscountType = "percent",
            ApplyType = "order",
            UsageLimit = 0,
            MinOrderAmount = 0
        };
        errorMessage = null;
        promotionModal.Show();
    }

    private void OpenEditModal(Promotion promotion)
    {
        isEditMode = true;
        currentPromotion = new CreatePromotionDto
        {
            PromoId = promotion.PromoId,
            PromoCode = promotion.PromoCode,
            DiscountType = promotion.DiscountType,
            DiscountValue = promotion.DiscountValue,
            ApplyType = promotion.ApplyType,
            MinOrderAmount = promotion.MinOrderAmount,
            StartDate = promotion.StartDate,
            EndDate = promotion.EndDate,
            UsageLimit = promotion.UsageLimit,
            Description = promotion.Description,
            Status = promotion.Status
        };
        errorMessage = null;
        promotionModal.Show();
    }

    private void CloseModal()
    {
        promotionModal.Hide();
        errorMessage = null;
    }

    private async Task SavePromotion()
    {
        errorMessage = null;
        
        if (string.IsNullOrWhiteSpace(currentPromotion.PromoCode))
        {
            errorMessage = "Promo code is required";
            return;
        }

        if (currentPromotion.DiscountValue <= 0)
        {
            errorMessage = "Discount value must be greater than 0";
            return;
        }

        if (currentPromotion.StartDate >= currentPromotion.EndDate)
        {
            errorMessage = "End date must be after start date";
            return;
        }

        isSaving = true;
        try
        {
            if (isEditMode)
            {
                await PromotionService.UpdatePromotionAsync(currentPromotion.PromoId, currentPromotion);
            }
            else
            {
                await PromotionService.CreatePromotionAsync(currentPromotion);
            }

            await LoadData();
            CloseModal();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeletePromotion(Promotion promotion)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete promotion '{promotion.PromoCode}'?");
        if (!confirmed) return;

        try
        {
            await PromotionService.DeletePromotionAsync(promotion.PromoId);
            await LoadData();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
    }

    private int GetUsageProgress(Promotion promo)
    {
        if (promo.UsageLimit == 0) return 0; // Or maybe 100 if we want to show full bar for unlimited? No, 0 is safer or maybe just hide bar.
        if (promo.UsedCount >= promo.UsageLimit) return 100;
        return (int)Math.Round((promo.UsedCount / (decimal)promo.UsageLimit) * 100);
    }

    private string GetUsageColorClass(Promotion promo)
    {
        if (promo.UsageLimit > 0 && promo.UsedCount >= promo.UsageLimit)
        {
            return "bg-red-600";
        }
        return "bg-green-500";
    }

    private Color GetApplyTypeColor(string applyType) => applyType switch
    {
        "order" => Color.Primary,
        "product" => Color.Success,
        "combo" => Color.Warning,
        _ => Color.Secondary
    };

    private string GetApplyTypeText(string applyType) => applyType switch
    {
        "order" => "Order",
        "product" => "Product",
        "combo" => "Combo",
        _ => applyType
    };
