<!-- Create Purchase Order Modal -->
<Modal @ref="createModal">
    <ModalContent Size="ModalSize.ExtraLarge">
        <ModalHeader class="bg-white border-b border-gray-200">
            <ModalTitle class="text-gray-900 font-bold">Tạo Phiếu Nhập Hàng</ModalTitle>
            <CloseButton Clicked="CloseCreateModal" />
        </ModalHeader>
        <ModalBody class="bg-white">
            <div class="space-y-4">
                <!-- Nhà cung cấp -->
                <div>
                    <label class="block text-sm font-bold text-gray-900 mb-2">Nhà cung cấp *</label>
                    <Select TValue="int?" @bind-SelectedValue="selectedSupplierId" class="w-full !border-gray-300">
                        <SelectItem Value="@((int?)null)">-- Chọn nhà cung cấp --</SelectItem>
                        @if (suppliers != null)
                        {
                            @foreach (var supplier in suppliers)
                            {
                                <SelectItem Value="@supplier.SupplierId">@supplier.Name</SelectItem>
                            }
                        }
                    </Select>
                </div>

                <!-- Kho -->
                <div>
                    <label class="block text-sm font-bold text-gray-900 mb-2">Kho nhập *</label>
                    <Select TValue="int?" @bind-SelectedValue="selectedWarehouseId" class="w-full !border-gray-300">
                        <SelectItem Value="@((int?)null)">-- Chọn kho --</SelectItem>
                        @if (warehouses != null)
                        {
                            @foreach (var warehouse in warehouses)
                            {
                                <SelectItem Value="@warehouse.WarehouseId">@warehouse.WarehouseName</SelectItem>
                            }
                        }
                    </Select>
                </div>

                <!-- Thêm Sản Phẩm -->
                <div class="border-t border-gray-200 pt-4">
                    <h5 class="font-bold text-gray-900 mb-3">Thêm Sản Phẩm</h5>

                    <div class="grid grid-cols-12 gap-3 mb-3">
                        <div class="col-span-5">
                            <Select TValue="int?" @bind-SelectedValue="selectedProductId" class="w-full !border-gray-300">
                                <SelectItem Value="@((int?)null)">-- Chọn sản phẩm --</SelectItem>
                                @if (products != null)
                                {
                                    @foreach (var product in products)
                                    {
                                        <SelectItem Value="@product.ProductId">@product.ProductName</SelectItem>
                                    }
                                }
                            </Select>
                        </div>
                        <div class="col-span-2">
                            <NumericEdit TValue="int" @bind-Value="itemQuantity" Min="1" Placeholder="Số lượng" class="w-full !border-gray-300" />
                        </div>
                        <div class="col-span-3">
                            <NumericEdit TValue="decimal" @bind-Value="itemCostPrice" Min="0" Step="1000" Placeholder="Giá nhập" class="w-full !border-gray-300" />
                        </div>
                        <div class="col-span-2">
                            <Button Color="Color.Primary" Clicked="AddItem" class="w-full !bg-blue-600 hover:!bg-blue-700 !text-white">
                                <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Plus" class="mr-1" /> Thêm
                            </Button>
                        </div>
                    </div>
                </div>

                <!-- Danh sách sản phẩm đã thêm -->
                @if (purchaseItems.Any())
                {
                    <div class="border border-gray-200 rounded-lg overflow-hidden">
                        <Table class="mb-0">
                            <TableHeader>
                                <TableRow class="bg-gray-50">
                                    <TableHeaderCell>Sản phẩm</TableHeaderCell>
                                    <TableHeaderCell>Số lượng</TableHeaderCell>
                                    <TableHeaderCell>Giá nhập</TableHeaderCell>
                                    <TableHeaderCell>Thành tiền</TableHeaderCell>
                                    <TableHeaderCell></TableHeaderCell>
                                </TableRow>
                            </TableHeader>
                            <TableBody>
                                @foreach (var item in purchaseItems)
                                {
                                    <TableRow>
                                        <TableRowCell>
                                            <span class="font-medium">@item.ProductName</span>
                                        </TableRowCell>
                                        <TableRowCell>@item.Quantity</TableRowCell>
                                        <TableRowCell>@item.CostPrice.ToString("N0") đ</TableRowCell>
                                        <TableRowCell class="font-bold">@item.Subtotal.ToString("N0") đ</TableRowCell>
                                        <TableRowCell>
                                            <Button Color="Color.Danger" Size="Size.Small" Clicked="@(() => RemoveItem(item))">
                                                <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Trash" />
                                            </Button>
                                        </TableRowCell>
                                    </TableRow>
                                }
                            </TableBody>
                        </Table>
                        <div class="bg-gray-50 px-6 py-4 border-t border-gray-200">
                            <div class="flex justify-between items-center">
                                <span class="text-lg font-bold text-gray-900">Tổng cộng:</span>
                                <span class="text-2xl font-bold text-blue-600">@CalculateTotal().ToString("N0") đ</span>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-8 text-gray-500 border border-gray-200 rounded-lg">
                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.BoxOpen" class="text-4xl mb-2" />
                        <p>Chưa có sản phẩm nào. Thêm sản phẩm để tạo phiếu nhập.</p>
                    </div>
                }

                @if (!string.IsNullOrEmpty(modalErrorMessage))
                {
                    <Alert Color="Color.Danger" Visible class="!bg-red-50 !border-red-200 !text-red-900">
                        @modalErrorMessage
                    </Alert>
                }
            </div>
        </ModalBody>
        <ModalFooter class="bg-gray-50 border-t border-gray-200">
            <Button Color="Color.Secondary" Clicked="CloseCreateModal" class="!bg-white !border-2 !border-gray-300 !text-gray-900 hover:!bg-gray-100">Hủy</Button>
            <Button Color="Color.Primary" Clicked="SavePurchaseOrder" Loading="isSaving" Disabled="@(!purchaseItems.Any())" class="!bg-blue-600 hover:!bg-blue-700 !text-white shadow-md">
                Tạo Phiếu Nhập
            </Button>
        </ModalFooter>
    </ModalContent>
</Modal>

