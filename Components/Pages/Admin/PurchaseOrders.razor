@code {
    private class PurchaseItemViewModel
    {
        public int ProductId { get; set; }
        public string ProductName { get; set; } = string.Empty;
        public int Quantity { get; set; }
        public decimal CostPrice { get; set; }
        public decimal Subtotal => Quantity * CostPrice;
    }

    private List<PurchaseOrderResponseDto>? purchaseOrders;
    private List<Supplier>? suppliers;
    private List<Warehouse>? warehouses;
    private List<Product>? products;
    private List<PurchaseItemViewModel> purchaseItems = new();

    private Modal createModal = null!;
    private Modal detailsModal = null!;

    private int? selectedSupplierId;
    private int? selectedWarehouseId;
    private int? selectedProductId;
    private int itemQuantity = 1;
    private decimal itemCostPrice = 0;

    private bool isSaving = false;
    private string? modalErrorMessage;
    private string? successMessage;

    private PurchaseOrderResponseDto? selectedPurchaseOrder;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        purchaseOrders = await PurchaseOrderService.GetAllPurchaseOrders();

        suppliers = await DbContext.Suppliers
            .Where(s => s.Status == "active")
            .OrderBy(s => s.Name)
            .ToListAsync();

        warehouses = await DbContext.Warehouses
            .Where(w => w.Status == "active")
            .OrderBy(w => w.WarehouseName)
            .ToListAsync();

        products = await DbContext.Products
            .Where(p => p.Status == "active")
            .OrderBy(p => p.ProductName)
            .ToListAsync();
    }

    private void OpenCreateModal()
    {
        selectedSupplierId = null;
        selectedWarehouseId = null;
        selectedProductId = null;
        itemQuantity = 1;
        itemCostPrice = 0;
        purchaseItems.Clear();
        modalErrorMessage = null;
        createModal.Show();
    }

    private void CloseCreateModal()
    {
        createModal.Hide();
    }

    private void AddItem()
    {
        modalErrorMessage = null;

        if (!selectedProductId.HasValue)
        {
            modalErrorMessage = "Vui lòng chọn sản phẩm";
            return;
        }

        if (itemQuantity <= 0)
        {
            modalErrorMessage = "Số lượng phải lớn hơn 0";
            return;
        }

        if (itemCostPrice <= 0)
        {
            modalErrorMessage = "Giá nhập phải lớn hơn 0";
            return;
        }

        // Check if product already added
        if (purchaseItems.Any(i => i.ProductId == selectedProductId.Value))
        {
            modalErrorMessage = "Sản phẩm đã có trong danh sách";
            return;
        }

        var product = products?.FirstOrDefault(p => p.ProductId == selectedProductId.Value);
        if (product == null) return;

        purchaseItems.Add(new PurchaseItemViewModel
        {
            ProductId = product.ProductId,
            ProductName = product.ProductName,
            Quantity = itemQuantity,
            CostPrice = itemCostPrice
        });

        // Reset form
        selectedProductId = null;
        itemQuantity = 1;
        itemCostPrice = 0;
    }

    private void RemoveItem(PurchaseItemViewModel item)
    {
        purchaseItems.Remove(item);
    }

    private decimal CalculateTotal()
    {
        return purchaseItems.Sum(i => i.Subtotal);
    }

    private async Task SavePurchaseOrder()
    {
        modalErrorMessage = null;

        if (!selectedSupplierId.HasValue)
        {
            modalErrorMessage = "Vui lòng chọn nhà cung cấp";
            return;
        }

        if (!selectedWarehouseId.HasValue)
        {
            modalErrorMessage = "Vui lòng chọn kho";
            return;
        }

        if (!purchaseItems.Any())
        {
            modalErrorMessage = "Vui lòng thêm ít nhất một sản phẩm";
            return;
        }

        isSaving = true;
        try
        {
            var createDto = new CreatePurchaseOrderDto
            {
                SupplierId = selectedSupplierId.Value,
                WarehouseId = selectedWarehouseId.Value,
                Items = purchaseItems.Select(i => new PurchaseItemDto
                {
                    ProductId = i.ProductId,
                    Quantity = i.Quantity,
                    CostPrice = i.CostPrice
                }).ToList()
            };

            await PurchaseOrderService.CreatePurchaseOrder(createDto, 1); // userId = 1 (admin)

            successMessage = "Tạo phiếu nhập hàng thành công!";
            CloseCreateModal();
            await LoadData();

            await Task.Delay(3000);
            successMessage = null;
        }
        catch (Exception ex)
        {
            modalErrorMessage = $"Lỗi: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task ExportToExcel()
    {
        try
        {
            var allPurchaseOrders = await DbContext.PurchaseOrders
                .Include(p => p.Supplier)
                .Include(p => p.Warehouse)
                .Include(p => p.User)
                .Include(p => p.PurchaseItems)
                    .ThenInclude(i => i.Product)
                .OrderByDescending(p => p.PurchaseDate)
                .ToListAsync();

            var csv = new StringBuilder();
            csv.AppendLine("PO #,Supplier,Warehouse,Date,User,Product,Quantity,Cost Price,Subtotal,Total Amount,Status");

            foreach (var po in allPurchaseOrders)
            {
                foreach (var item in po.PurchaseItems)
                {
                    csv.AppendLine($"{po.PurchaseId},\"{po.Supplier?.Name}\",\"{po.Warehouse?.WarehouseName}\",{po.PurchaseDate:yyyy-MM-dd HH:mm:ss},\"{po.User?.Username}\",\"{item.Product?.ProductName}\",{item.Quantity},{item.CostPrice},{item.Subtotal},{po.TotalAmount},{po.Status}");
                }
            }

            var fileName = $"PurchaseOrders_Export_{DateTime.Now:yyyyMMdd_HHmmss}.csv";
            var bytes = Encoding.UTF8.GetBytes(csv.ToString());
            var base64 = Convert.ToBase64String(bytes);

            await JSRuntime.InvokeVoidAsync("downloadFile", fileName, base64);

            successMessage = "Purchase orders exported successfully!";
            await Task.Delay(3000);
            successMessage = null;
        }
        catch (Exception ex)
        {
            successMessage = $"Error exporting: {ex.Message}";
            await Task.Delay(3000);
            successMessage = null;
        }
    }

    private async Task ViewDetails(PurchaseOrderResponseDto po)
    {
        selectedPurchaseOrder = await PurchaseOrderService.GetPurchaseOrderById(po.PurchaseId);
        detailsModal.Show();
    }
}
