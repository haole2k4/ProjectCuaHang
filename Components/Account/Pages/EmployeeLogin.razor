@page "/Account/EmployeeLogin"

@using System.ComponentModel.DataAnnotations
@using System.Net.Http.Json
@using BlazorApp1.Services
@using BlazorApp1.Components.Shared

@inject HttpClient HttpClient
@inject NavigationManager NavigationManager
@inject ToastService ToastService

<PageTitle>Employee Login</PageTitle>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
        <div class="bg-white rounded-2xl shadow-xl p-8">
            <!-- Header -->
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-blue-600 to-purple-600 rounded-xl mb-4 shadow-lg">
                    <i class="fas fa-user-tie text-white text-2xl"></i>
                </div>
                <h2 class="text-3xl font-bold text-gray-900 mb-2">Employee Portal</h2>
                <p class="text-gray-600">Sign in to access your dashboard</p>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="bg-red-50 border-l-4 border-red-500 text-red-800 px-4 py-3 rounded-lg mb-6" role="alert">
                    <div class="flex items-center">
                        <i class="fas fa-exclamation-circle mr-2"></i>
                        <p class="font-medium">@errorMessage</p>
                    </div>
                </div>
            }

            <EditForm Model="@Input" OnValidSubmit="HandleLogin" FormName="employeeLogin" class="space-y-6">
                <DataAnnotationsValidator />
                
                <div>
                    <label for="username" class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-user mr-1"></i> Username
                    </label>
                    <InputText @bind-Value="Input.Username" id="username" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition" 
                               autocomplete="username" 
                               placeholder="your.email@gmail.com" />
                    <ValidationMessage For="() => Input.Username" class="text-red-600 text-sm mt-1" />
                </div>

                <div>
                    <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-lock mr-1"></i> Password
                    </label>
                    <InputText type="password" @bind-Value="Input.Password" id="password" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition" 
                               autocomplete="current-password" 
                               placeholder="Enter your password" />
                    <ValidationMessage For="() => Input.Password" class="text-red-600 text-sm mt-1" />
                </div>

                <button type="submit" disabled="@isLoading" 
                        class="w-full flex items-center justify-center px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-semibold rounded-lg transition duration-200 shadow-lg hover:shadow-xl disabled:opacity-50 disabled:cursor-not-allowed">
                    @if (isLoading)
                    {
                        <span class="inline-block animate-spin rounded-full h-5 w-5 border-b-2 border-white mr-2"></span>
                        <span>Signing in...</span>
                    }
                    else
                    {
                        <i class="fas fa-sign-in-alt mr-2"></i>
                        <span>Sign In</span>
                    }
                </button>
            </EditForm>

            <div class="mt-6 text-center">
                <p class="text-sm text-gray-600">
                    Admin? <a href="/Account/Login" class="text-blue-600 hover:text-blue-700 font-semibold transition">Sign in here</a>
                </p>
            </div>

            <!-- Info Box -->
            <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
                <p class="text-sm text-blue-800">
                    <i class="fas fa-info-circle mr-1"></i>
                    <strong>Employee Accounts:</strong>
                </p>
                <ul class="text-xs text-blue-700 mt-2 space-y-1 ml-5">
                    <li>Sales: sales_user1@gmail.com / Sales123!</li>
                    <li>Warehouse: warehouse_user1@gmail.com / Warehouse123!</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<ToastContainer />

@code {
    private string? errorMessage;
    private bool isLoading = false;

    [SupplyParameterFromForm]
    private EmployeeLoginInput Input { get; set; } = default!;

    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;
        StateHasChanged();

        try
        {
            var loginRequest = new
            {
                Username = Input.Username,
                Password = Input.Password,
                RememberMe = true
            };

            var response = await HttpClient.PostAsJsonAsync("/api/EmployeeAuth/login", loginRequest);
            
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<LoginResponse>();
                
                if (result?.Success == true)
                {
                    ToastService.ShowSuccess($"Welcome back, {result.User?.FullName}!");
                    
                    // Force reload to refresh authentication state
                    NavigationManager.NavigateTo(ReturnUrl ?? "/admin/dashboard", forceLoad: true);
                }
                else
                {
                    errorMessage = result?.Message ?? "Login failed";
                    ToastService.ShowError(errorMessage);
                }
            }
            else
            {
                var errorResult = await response.Content.ReadFromJsonAsync<LoginResponse>();
                errorMessage = errorResult?.Message ?? "Invalid username or password. Please try again.";
                ToastService.ShowError(errorMessage);
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred during login. Please try again.";
            ToastService.ShowError($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private class LoginResponse
    {
        public bool Success { get; set; }
        public string? Message { get; set; }
        public UserInfo? User { get; set; }
    }

    private class UserInfo
    {
        public string? Username { get; set; }
        public string? FullName { get; set; }
        public string? Role { get; set; }
    }

    private sealed class EmployeeLoginInput
    {
        [Required(ErrorMessage = "Username is required")]
        public string Username { get; set; } = "";

        [Required(ErrorMessage = "Password is required")]
        [DataType(DataType.Password)]
        public string Password { get; set; } = "";
    }
}
