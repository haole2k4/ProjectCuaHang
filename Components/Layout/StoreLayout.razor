@inherits LayoutComponentBase
@using BlazorApp1.Services
@using System.Security.Claims
@using Blazorise

@inject ICartService CartService
@inject NavigationManager NavigationManager

<div class="store-layout">
    <!-- Navigation Header -->
    <nav class="bg-gray-800 text-white sticky top-0 z-50 shadow-lg">
        <div class="container mx-auto px-4 max-w-7xl">
            <div class="flex items-center justify-between h-16">
                <!-- Brand -->
                <a href="/" class="flex items-center gap-2 text-white hover:text-gray-200 transition">
                    <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Store" class="text-xl" />
                    <span class="font-bold text-xl">E-Store</span>
                </a>

                <!-- Navigation Links -->
                <div class="hidden md:flex items-center gap-6">
                    <a href="/store" class="flex items-center gap-1 text-gray-300 hover:text-white transition">
                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.ThLarge" /> Products
                    </a>
                    <a href="/store/categories" class="flex items-center gap-1 text-gray-300 hover:text-white transition">
                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Tags" /> Categories
                    </a>
                </div>

                <!-- Right Side -->
                <div class="flex items-center gap-4">
                    <!-- Cart -->
                    <a href="/store/cart" class="flex items-center gap-1 text-gray-300 hover:text-white transition relative">
                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.ShoppingCart" />
                        <span>Cart</span>
                        @if (cartItemCount > 0)
                        {
                            <span class="absolute -top-2 -right-4 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">
                                @cartItemCount
                            </span>
                        }
                    </a>

                    <!-- User Menu -->
                    <AuthorizeView>
                        <Authorized>
                            <div class="relative group">
                                <button class="flex items-center gap-2 text-gray-300 hover:text-white transition px-3 py-2 rounded-lg hover:bg-gray-700">
                                    <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.User" />
                                    <span>@context.User.Identity?.Name</span>
                                    <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.ChevronDown" class="text-xs" />
                                </button>
                                <!-- Dropdown Menu -->
                                <div class="absolute right-0 mt-1 w-48 bg-white rounded-lg shadow-xl py-2 hidden group-hover:block z-50">
                                    <a href="/store/profile" class="flex items-center gap-2 px-4 py-2 text-gray-700 hover:bg-gray-100 transition">
                                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.UserCircle" /> My Profile
                                    </a>
                                    <a href="/store/orders" class="flex items-center gap-2 px-4 py-2 text-gray-700 hover:bg-gray-100 transition">
                                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.ShoppingBag" /> My Orders
                                    </a>
                                    @if (context.User.IsInRole("admin"))
                                    {
                                        <hr class="my-1 border-gray-200" />
                                        <a href="/admin/dashboard" class="flex items-center gap-2 px-4 py-2 text-gray-700 hover:bg-gray-100 transition">
                                            <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.ChartLine" /> Admin Dashboard
                                        </a>
                                    }
                                    <hr class="my-1 border-gray-200" />
                                    <a href="/Account/Logout" class="flex items-center gap-2 px-4 py-2 text-gray-700 hover:bg-gray-100 transition">
                                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.SignOutAlt" /> Logout
                                    </a>
                                </div>
                            </div>
                        </Authorized>
                        <NotAuthorized>
                            <div class="flex items-center gap-2">
                                <a href="/Account/Login" class="flex items-center gap-1 text-gray-300 hover:text-white transition">
                                    <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.SignInAlt" /> Login
                                </a>
                                <a href="/Account/Register" class="flex items-center gap-1 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition">
                                    <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.UserPlus" /> Register
                                </a>
                            </div>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-1 container mx-auto px-4 py-8 max-w-7xl">
        @Body
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-gray-300 py-8 mt-auto">
        <div class="container mx-auto px-4 max-w-7xl">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div>
                    <h5 class="text-white font-semibold text-lg mb-4 flex items-center gap-2">
                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Store" /> E-Store
                    </h5>
                    <p class="text-gray-400">Your trusted online shopping destination.</p>
                </div>
                <div>
                    <h5 class="text-white font-semibold text-lg mb-4">Quick Links</h5>
                    <ul class="space-y-2">
                        <li><a href="/store" class="text-gray-400 hover:text-white transition">Products</a></li>
                        <li><a href="/store/cart" class="text-gray-400 hover:text-white transition">Cart</a></li>
                        <li><a href="/store/orders" class="text-gray-400 hover:text-white transition">Orders</a></li>
                    </ul>
                </div>
                <div>
                    <h5 class="text-white font-semibold text-lg mb-4">Contact</h5>
                    <p class="text-gray-400 mb-1 flex items-center gap-2">
                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Envelope" /> support@estore.com
                    </p>
                    <p class="text-gray-400 flex items-center gap-2">
                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Phone" /> +1 234 567 890
                    </p>
                </div>
            </div>
            <hr class="my-6 border-gray-700" />
            <p class="text-center text-gray-500">
                &copy; @DateTime.Now.Year E-Store. All rights reserved.
            </p>
        </div>
    </footer>
</div>

<div id="blazor-error-ui" data-nosnippet class="fixed bottom-0 left-0 right-0 bg-red-600 text-white p-4 text-center hidden">
    An unhandled error has occurred.
    <a href="." class="reload underline ml-2">Reload</a>
    <span class="dismiss cursor-pointer ml-4">?</span>
</div>

@code {
    private int cartItemCount = 0;

    protected override void OnInitialized()
    {
        CartService.OnChange += async () => await UpdateCartCount();
        _ = UpdateCartCount();
    }

    private async Task UpdateCartCount()
    {
        cartItemCount = await CartService.GetItemCountAsync();
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        CartService.OnChange -= async () => await UpdateCartCount();
    }
}

<ToastContainer />
