@inherits LayoutComponentBase
@using BlazorApp1.Services
@using System.Security.Claims
@using Blazorise

@inject ICartService CartService
@inject NavigationManager NavigationManager

<div class="store-layout">
    <!-- Navigation Header -->
    <Bar Breakpoint="Breakpoint.Desktop" Background="Background.Primary" ThemeContrast="ThemeContrast.Dark" class="sticky top-0 z-50">
        <BarBrand href="/">
            <BarItem>
                <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Store" class="mr-2" />
                <span class="font-bold text-xl">E-Store</span>
            </BarItem>
        </BarBrand>
        <BarToggler />
        <BarMenu>
            <BarStart>
                <BarItem>
                    <BarLink To="/store">
                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.ThLarge" class="mr-1" /> Products
                    </BarLink>
                </BarItem>
                <BarItem>
                    <BarLink To="/store/categories">
                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Tags" class="mr-1" /> Categories
                    </BarLink>
                </BarItem>
            </BarStart>
            <BarEnd>
                <BarItem>
                    <BarLink To="/store/cart" class="relative">
                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.ShoppingCart" />
                        <span class="ml-1">Cart</span>
                        @if (cartItemCount > 0)
                        {
                            <Badge Color="Color.Danger" Pill class="absolute -top-2 -right-2 text-xs">
                                @cartItemCount
                            </Badge>
                        }
                    </BarLink>
                </BarItem>
                <AuthorizeView>
                    <Authorized>
                        <BarItem>
                            <BarDropdown>
                                <BarDropdownToggle>
                                    <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.User" class="mr-1" />
                                    @context.User.Identity?.Name
                                </BarDropdownToggle>
                                <BarDropdownMenu>
                                    <BarDropdownItem To="/store/orders">
                                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.ShoppingBag" class="mr-2" /> My Orders
                                    </BarDropdownItem>
                                    <BarDropdownDivider />
                                    <BarDropdownItem To="/logout">
                                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.SignOutAlt" class="mr-2" /> Logout
                                    </BarDropdownItem>
                                </BarDropdownMenu>
                            </BarDropdown>
                        </BarItem>
                    </Authorized>
                    <NotAuthorized>
                        <BarItem>
                            <BarLink To="/login">
                                <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.SignInAlt" class="mr-1" /> Login
                            </BarLink>
                        </BarItem>
                    </NotAuthorized>
                </AuthorizeView>
            </BarEnd>
        </BarMenu>
    </Bar>

    <!-- Main Content -->
    <main class="flex-1 container mx-auto px-4 py-8 max-w-7xl">
        @Body
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-gray-300 py-8 mt-auto">
        <div class="container mx-auto px-4 max-w-7xl">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div>
                    <Heading Size="HeadingSize.Is5" TextColor="TextColor.White" class="mb-4">
                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Store" class="mr-2" /> E-Store
                    </Heading>
                    <Paragraph class="text-gray-400">Your trusted online shopping destination.</Paragraph>
                </div>
                <div>
                    <Heading Size="HeadingSize.Is5" TextColor="TextColor.White" class="mb-4">Quick Links</Heading>
                    <ul class="space-y-2">
                        <li><Anchor To="/store" TextColor="TextColor.Muted" class="hover:text-white transition">Products</Anchor></li>
                        <li><Anchor To="/store/cart" TextColor="TextColor.Muted" class="hover:text-white transition">Cart</Anchor></li>
                        <li><Anchor To="/store/orders" TextColor="TextColor.Muted" class="hover:text-white transition">Orders</Anchor></li>
                    </ul>
                </div>
                <div>
                    <Heading Size="HeadingSize.Is5" TextColor="TextColor.White" class="mb-4">Contact</Heading>
                    <Paragraph class="text-gray-400 mb-1">
                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Envelope" class="mr-2" /> support@estore.com
                    </Paragraph>
                    <Paragraph class="text-gray-400">
                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Phone" class="mr-2" /> +1 234 567 890
                    </Paragraph>
                </div>
            </div>
            <Divider class="my-6 border-gray-700" />
            <Paragraph TextAlignment="TextAlignment.Center" class="text-gray-500">
                &copy; @DateTime.Now.Year E-Store. All rights reserved.
            </Paragraph>
        </div>
    </footer>
</div>

<div id="blazor-error-ui" data-nosnippet class="fixed bottom-0 left-0 right-0 bg-red-600 text-white p-4 text-center hidden">
    An unhandled error has occurred.
    <a href="." class="reload underline ml-2">Reload</a>
    <span class="dismiss cursor-pointer ml-4">??</span>
</div>

@code {
    private int cartItemCount = 0;

    protected override void OnInitialized()
    {
        CartService.OnChange += UpdateCartCount;
        UpdateCartCount();
    }

    private void UpdateCartCount()
    {
        cartItemCount = CartService.GetItemCount();
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        CartService.OnChange -= UpdateCartCount;
    }
}
